{% assign badgeData = product.metafields.judgeme.badge | json %}

{% assign averageRating = badgeData | split: "data-average-rating='" | last | split: "'" | first %}
{% assign totalRating = badgeData | split: "data-number-of-reviews='" | last | split: "'" | first %}

{% assign averageRating = averageRating | plus: 0.00 %}
{% assign totalRating = totalRating | times: 1 %}

<div class="product-ratings">
  <span class="icon icon-star"></span>
 <span class="avarage-ratings">{{ averageRating }}{% if hide_reviews_counter %}({{ totalRating }}){% endif %}</span>
</div>